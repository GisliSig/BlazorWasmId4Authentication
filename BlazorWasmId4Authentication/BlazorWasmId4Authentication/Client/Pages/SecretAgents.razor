@page "/secretagent"
@if (_agents == null)
{
    <p><em>Loading agents...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Alias</th>
                <th>Is missing</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agent in _agents)
            {
                <tr>
                    <td>@agent.Name</td>
                    <td>@agent.Alias</td>
                    <td>@(agent.IsMissing ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}